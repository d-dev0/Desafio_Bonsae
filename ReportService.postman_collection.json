    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Criar relatório (POST /reports)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"rows\": 20000, \"columns\": 12, \"title\": \"Relatório Bonsae\"}"
        },
        "url": {
          "raw": "{{baseUrl}}/reports",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "reports"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Consultar status (GET /reports/:id)",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/reports/:id",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "reports",
            ":id"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Download (GET /reports/:id/download)",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/reports/:id/download",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "reports",
            ":id",
            "download"
          ]
        }
      },
      "response": []
    }
